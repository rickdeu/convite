<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/intro3"
    android:id="@+id/screshoot_convite"
    android:layout_height="match_parent">
    <ScrollView
        android:background="@color/transparentpreto"
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/mensagemconvite"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text="De modo que já não são mais dois, mais uma só carne. Portanto o que Deus uniu o homem não pode separar (Mt 19. 5)"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/noivo_convite"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:textStyle="italic"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:fontFamily="cursive"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:id="@+id/noiva_convite"
                        android:layout_marginLeft="2dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:fontFamily="cursive"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/textoConvidar"
                                android:textSize="14sp"
                                android:layout_margin="1dp"
                                android:layout_marginRight="@dimen/dimen_20"
                                android:textStyle="italic"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:fontFamily="cursive"
                                android:layout_height="wrap_content"
                                android:text="Temos a honra de convidar O(a) Senhor(a)"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <!--    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/logoconvite"/>
                        -->
                        <TextView
                            android:id="@+id/id_convidado_convite"
                            android:textSize="30sp"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/nossocasamento"
                                android:textSize="14sp"
                                android:layout_margin="2dp"
                                android:textStyle="italic"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:fontFamily="cursive"
                                android:layout_height="wrap_content"
                                android:text="Para o nosso casamento"/>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20sp"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:textColor="@color/white"
                            android:fontFamily="cursive"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:id="@+id/cerimonia_civl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:id="@+id/nome_conservatoria"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:id="@+id/data_conservatoria"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:id="@+id/hora_conservatoria"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20sp"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:textColor="@color/white"
                            android:fontFamily="cursive"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:id="@+id/cerimonia_religiosa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:id="@+id/nome_igreja"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:id="@+id/data_igreja"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:id="@+id/hora_igreja"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:fontFamily="cursive"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:id="@+id/copo_agua"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>


                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/nome_salao"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:id="@+id/hora_salao"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:fontFamily="cursive"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acompanhante"
                                android:textSize="12sp"
                                android:fontFamily="cursive"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/acompanhante_convite_convidado"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:fontFamily="cursive"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_qr_convido"
                                android:layout_width="145dp"
                                android:layout_height="145dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/imagemsecundario"
                                android:layout_width="match_parent"
                                android:contentDescription="@null"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado"
                                app:layout_collapseMode="parallax"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="Quantidade"
                                android:fontFamily="cursive"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/numero_convite_detalhe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:fontFamily="cursive"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>