<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pp="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    pp:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/ll_container_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/casamentos"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="10.0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/casamentos" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/servicos"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="10.0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/servicos" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/festas"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10.0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/festas"/>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_container_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/convites"
                        android:layout_width="100dp"
                        android:layout_margin="10dp"
                        android:layout_height="100dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10.0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/convites"/>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/after_party"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10.0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/after_party" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/aniversarios"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10.0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/aniversarios" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_container_third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/baptismo"
                        android:layout_width="100dp"
                        android:layout_margin="10dp"
                        android:layout_height="100dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10.0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/baptismo" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/Religiosos"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10.0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/religiosos" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/infantil"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10.0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/infantil" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_container_fourth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/outros"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="100dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10.0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="0dp"
                                android:layout_weight=".7"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/logoeditado" />

                            <com.fenix.wakonga.views.FontView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:gravity="center_horizontal"
                                android:text="@string/others" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>